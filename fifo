#include <stdio.h>
#include <stdbool.h>

int main() {
    int pages[] = {0, 1, 5, 3, 5, 0, 2, 4, 7, 9, 0, 0, 3};
    int n = 13; // number of pages
    int frame_size = 4;

    int frames[4] = {-1, -1, -1, -1}; // initialize all frames to empty
    int front = 0; // FIFO pointer
    int hits = 0, misses = 0;

    for (int i = 0; i < n; i++) {
        int page = pages[i];
        bool hit = false;

        // Check if page is already in frame (hit)
        for (int j = 0; j < frame_size; j++) {
            if (frames[j] == page) {
                hit = true;
                break;
            }
        }

        if (hit) {
            hits++;
        } else {
            // Replace the oldest page using FIFO
            frames[front] = page;
            front = (front + 1) % frame_size;
            misses++;
        }
    }

    printf("\nTotal Page Hits  = %d\n", hits);
    printf("Total Page Misses = %d\n", misses);

    return 0;
}
